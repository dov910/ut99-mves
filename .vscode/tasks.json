{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cd ../System && del MVES.u && ucc make ini=..\\MVES\\make.ini",
            "problemMatcher": []
        },
        {
            "label": "run server",
            "type": "shell",
            "command": "cd ../System && ucc server DM-Deck16][?mutator=MVES.MapVote",
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": "(Classes(?:\\\\[A-Za-z0-9.]+)+)\\((\\d+)\\)\\s*:\\s*Error,?\\s*(.*)$",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ]
                }
            ],
            "runOptions": {
                "instanceLimit": 1,
                "reevaluateOnRerun": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "group": "groupA",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "join server",
            "type": "shell",
            "command": "cd ../System && UnrealTournament.exe unreal://127.0.0.1:7777 -log",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "close": true,
                "focus": false,
                "panel": "shared",
                "group": "joinGroup",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}